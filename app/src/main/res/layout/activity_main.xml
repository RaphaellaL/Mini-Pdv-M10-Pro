<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="#FAFAFA">

    <Button
        android:id="@+id/btnPrintText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Imprimir Texto"
        android:padding="16dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnAlignCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alinhar Centro"
        android:padding="16dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnAlignLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alinhar Esquerda"
        android:padding="16dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnAlignRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alinhar Direita"
        android:padding="16dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnPrintQr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Imprimir QRCode"
        android:padding="16dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnCut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cortar Papel"
        android:padding="16dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnFullTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teste Completo"
        android:padding="16dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>
